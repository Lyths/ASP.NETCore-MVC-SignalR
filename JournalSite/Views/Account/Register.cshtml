@model RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<div class="wrapper2">
    <div class="color_block form">
        <em class="bt"><b>&nbsp;</b></em>
            <div class="block_content" >
                <h1>Регистрация учетной записи</h1>
                <div>
                    <form asp-area="" asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div >
                            <label asp-for="Name" ></label><br />
                            <input asp-for="Name" /><br />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div >
                            <label asp-for="Email" ></label><br />
                            <input asp-for="Email" /><br />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div >
                            <label asp-for="Password" ></label><br />
                            <input asp-for="Password" /><br />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div >
                            <label asp-for="ConfirmPassword" ></label><br />
                            <input asp-for="ConfirmPassword" /><br />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div><br />
                        <div >
                            <input type="submit" value="Подтвердить" />
                        </div>
                    </form>
                </div>
                <a asp-controller="Account" asp-action="Login">Авторизация</a>
            </div>
        <em class="bb"><b>&nbsp;</b></em>
    </div>
</div>

